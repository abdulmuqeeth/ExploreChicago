<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="abdulmuqeeth.uic.com.explorechicago.MainActivity">

    <fragment
        android:id="@+id/attraction_name_frag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="abdulmuqeeth.uic.com.explorechicago.AttractionNamesFragment" />

    <fragment
        android:id="@+id/attraction_page_frag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="abdulmuqeeth.uic.com.explorechicago.AttractionPageFragment" />

</LinearLayout>
